<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mood_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Judul -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hai programmer,\nmood hari ini gimana?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Subjudul -->
        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih mood kamu hari ini:"
            android:textSize="16sp"
            android:textColor="#888888"
            android:layout_marginBottom="16dp" />

        <!-- GridLayout 2 kolom -->
        <GridLayout
            android:id="@+id/gridMood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Card 1 -->
            <LinearLayout
                android:id="@+id/cardSenang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_rounded"
                android:backgroundTint="#9FA8DA"
                android:layout_margin="8dp"
                android:gravity="center"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_smile"
                    android:contentDescription="Senang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senang"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- Card 2 -->
            <LinearLayout
                android:id="@+id/cardBiasa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_rounded"
                android:backgroundTint="#FF8A65"
                android:layout_margin="8dp"
                android:gravity="center"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_neutral"
                    android:contentDescription="Biasa" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biasa"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- Card 3 -->
            <LinearLayout
                android:id="@+id/cardMarah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_rounded"
                android:backgroundTint="#EF5350"
                android:layout_margin="8dp"
                android:gravity="center"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_angry"
                    android:contentDescription="Marah" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marah"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- Card 4 -->
            <LinearLayout
                android:id="@+id/cardGembira"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_rounded"
                android:backgroundTint="#FFD54F"
                android:layout_margin="8dp"
                android:gravity="center"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_laugh"
                    android:contentDescription="Gembira" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gembira"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- Card 5 -->
            <LinearLayout
                android:id="@+id/cardBahagia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_rounded"
                android:backgroundTint="#81C784"
                android:layout_margin="8dp"
                android:gravity="center"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_heart"
                    android:contentDescription="Bahagia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bahagia"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- Card 6 -->
            <LinearLayout
                android:id="@+id/cardSedih"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_rounded"
                android:backgroundTint="#90A4AE"
                android:layout_margin="8dp"
                android:gravity="center"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_sad"
                    android:contentDescription="Sedih" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sedih"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

        </GridLayout>

        <!-- Tombol NEXT -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="NEXT"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:visibility="gone"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
