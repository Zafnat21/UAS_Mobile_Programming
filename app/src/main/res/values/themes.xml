<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.UAS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Mengatur warna teks status bar menjadi gelap -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Mengatur agar konten dapat menggambar di belakang status bar -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Mengatur fitsSystemWindows ke false untuk kontrol manual -->
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Theme.UAS" parent="Base.Theme.UAS" />
</resources>
